<?xml version="1.0"?>
<info>
	<id>sagis_email_template</id>
	<name>EmailTemplateSagis</name>
	<description>ensemble des modeles d email pour SAGIS</description>
	<licence>AGPL</licence>
	<author>Guillaume COMPAGNON</author>
	<version>1.0.0</version>
	<namespace>SagisEmailTemplate</namespace>

	<types>
		<logging/>
	</types>

	<category>customization</category>
	<bugs>https://github.com/compagnon/sagis-nextcloud/issues</bugs>


	<dependencies>
		<nextcloud min-version="16" max-version="17"/>
	</dependencies>

	<repair-steps>
		<install>
			<step>OCA\SagisEmailTemplate\Migration\SetEmailTemplate</step>
		</install>
		<uninstall>
			<step>OCA\SagisEmailTemplate\Migration\UnsetEmailTemplate</step>
		</uninstall>
	</repair-steps>
</info>
